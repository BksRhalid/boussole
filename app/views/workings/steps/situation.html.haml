-# coding: utf-8

.l-container-narrow
  .l-content
    %article.wizard-form
      %h1.wizard-form-header Ta situation
      %hr

      = simple_form_for(@working, url: wizard_path, method: :put, wrapper: :vertical_form) do |f|
        = f.error_notification

        = f.input :status,
                  include_blank: false,
                  prompt: 'Sélectionne une option',
                  collection: STATUSES,
                  label_method: :to_s,
                  value_method: :to_s,
                  as: :select

        = f.input :age,
                  include_blank: false,
                  prompt: 'Sélectionne une option',
                  collection: 16..30,
                  label_method: :to_i,
                  value_method: :to_i,
                  as: :select

        = f.input :handicap, as: :radio_buttons

        = f.input :last_class,
                  include_blank: false,
                  prompt: 'Sélectionne une option',
                  collection: LAST_CLASSES,
                  label_method: :to_s,
                  value_method: :to_s,
                  as: :select

        = f.input :city,
                  collection: CITIES[rhizome],
                  include_blank: false,
                  input_html: { rel: 'autocomplete' }

        = render(partial: 'blocks/button_groups/wizard_nth_step')
